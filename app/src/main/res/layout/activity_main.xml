<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#00b894"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingTop="60dp"
    android:paddingBottom="60dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#55efc4">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Ini Login Loh"
            android:textColor="#006652"
            android:textSize="30sp"
            android:layout_marginBottom="30dp"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/edtLogEmai"
            android:hint="Email"
            android:textColor="#fff"
            android:textAlignment="center"
            android:inputType="text"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/edtLogPass"
            android:hint="Password"
            android:textColor="#fff"
            android:textAlignment="center"
            android:inputType="textPassword"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Login"
            android:id="@+id/btnLogin"
            android:onClick="prosesLogin"
            android:textSize="17sp"
            android:background="#00cec9"
            android:textColor="#fff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Register"
            android:id="@+id/regg"
            android:textColor="#006652"
            android:textSize="18sp"
            android:drawableRight="@drawable/reg_add"/>
    </LinearLayout>



</LinearLayout>